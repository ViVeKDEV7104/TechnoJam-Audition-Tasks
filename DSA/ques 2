public class Q2 {
    public static int climbStairs(int n) {
        if (n <= 1) {
            return 1;
        }

        // Create an array to store the number of ways to climb each step
        int[] dp = new int[n + 1];
        
        // Base cases
        dp[0] = 1;
        dp[1] = 1;

        // Fill the dp array using the relation dp[i] = dp[i-1] + dp[i-2]
        for (int i = 2; i <= n; i++) {
            dp[i] = dp[i - 1] + dp[i - 2];
        }

        // The result will be stored in dp[n]
        return dp[n];
    }

    public static void main(String[] args) {
        int n = 2;
        System.out.println(climbStairs(n)); // Output: 2
    }
}
